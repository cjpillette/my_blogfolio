<div class="row">
  <div class="col-xs-12 col-sm-6">
    <%= image_tag(portfolio.avatar_url.to_s, style: "max-width: 100%") %>
  </div>

<div class="container-90 center">
  <div class="col-xs-12 col-sm-6 center title-padding-top">
    <h2><%= portfolio.title %></h2>

  <div class="center">
    <% if user_signed_in? %>
    <%= link_to fa_icon('eye'), portfolio_path(portfolio) %>
    <%= link_to fa_icon('pencil-square-o'), edit_portfolio_path(portfolio) %>
    <%= link_to fa_icon('trash'), portfolio, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= markdown(HTML_Truncator.truncate(portfolio.description, 50)) %>
  <%= link_to 'Read more', portfolio_path(portfolio), class: 'btn btn-secondary read-more-button' %>

  </div>
</div>
</div>
<hr>
