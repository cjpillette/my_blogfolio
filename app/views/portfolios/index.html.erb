<h1 class="section-title-no-margin">Portfolios</h1>
<% if user_signed_in? %>
<div class="btn-center">
  <%= link_to 'New Portfolio', new_portfolio_path, class: 'btn btn-outline-primary' %>
  <% end %>
</div>

<% @portfolios.each do |portfolio| %>
  <%= render 'portfolio', portfolio: portfolio %>
<% end %>

<div class="pagination">
  <%= paginate @portfolios %>
</div>
