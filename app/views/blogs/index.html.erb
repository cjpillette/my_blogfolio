<h1>Blogs</h1>
  <%= link_to 'New Blog', new_blog_path %>
  <% @blogs.each do |blog| %>
    <div class="blog-post">
      <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
      <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
        <p class="blog-post-meta">
        <%= link_to 'Show', blog %>
        <%= link_to 'Edit', edit_blog_path(blog) %>
        <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <p>
        <%= blog.body %>
      </p>
      <p><%= blog.topic.title %></p>
    </div>
  <% end %>

  <div>List of all the topics already created
    <p><% @topics.each do |topic| %>
      <%= topic %>
      <hr>
      <% end %>
    </p>
  </div>

  <hr>
  <%= paginate @blogs %>
  <hr>
