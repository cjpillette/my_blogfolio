<div class="wrapper">
  <h1 class="contact-title">Contact</h1>
  <%= image_tag('contact-background.png', class: 'melbourne-contact img-fluid') %>

  <div class="form-contact">
    <form action="https://formspree.io/cjpillette@gmail.com"
          method="POST">
          <div class="form-group">
          <input class="email-box boxed form-control" type="email" placeholder="Your email address"/>
          <textarea class="message-box boxed form-control" type="text" placeholder="Enter your message here..."></textarea>
          <input class="btn btn-primary btn-send" type="submit" value="SEND" />
        </div>
    </form>
  </div>


