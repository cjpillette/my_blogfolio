<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <small>My bootcamp journey</small>
            </h1>
        </div>
    </div>
    <% if user_signed_in? %>
    <%= link_to 'New Vlog', new_vlog_path %>
    <% end %>

    <div class="row">
      <% @vlogs.each do |vlog| %>
      <%= render 'vlog', vlog: vlog %>        
      <% end %>
    </div>
</div>

<hr>
<%= paginate @vlogs %>
<hr>

</div>
